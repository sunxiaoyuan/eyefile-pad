<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true">


    <TextView
        android:id="@+id/tv_012_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="0.12"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_012_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="4.1"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/rl_012_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/tv_012_1"
        android:layout_toLeftOf="@+id/tv_012_1"
        android:layout_toEndOf="@+id/tv_012_0"
        android:layout_toRightOf="@+id/tv_012_0">

        <LinearLayout
            android:id="@+id/ll_012_eye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_012_0"
                android:layout_width="290dp"
                android:layout_height="290dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/e_up" />

            <ImageView
                android:id="@+id/iv_012_1"
                android:layout_width="290dp"
                android:layout_height="290dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/e_right" />

        </LinearLayout>


        <ImageView
            android:scaleType="fitXY"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/ll_012_eye"
            android:adjustViewBounds="true"
            android:minWidth="200dp"
            android:minHeight="200dp"
            app:srcCompat="@mipmap/indicator" />


    </RelativeLayout>


</RelativeLayout>