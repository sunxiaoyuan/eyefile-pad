<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/tv_05_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="0.5"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_05_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="4.7"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp" />

    <RelativeLayout
        android:clipChildren="false"
        android:id="@+id/rl_05_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/tv_05_1"
        android:layout_toLeftOf="@+id/tv_05_1"
        android:layout_toEndOf="@+id/tv_05_0"
        android:layout_toRightOf="@+id/tv_05_0">

        <LinearLayout
            android:id="@+id/ll_05_eye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_05_0"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/e_down" />

            <ImageView
                android:id="@+id/iv_05_1"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/e_left" />

            <ImageView
                android:id="@+id/iv_05_2"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/e_down" />

            <ImageView
                android:id="@+id/iv_05_3"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/e_right" />

            <ImageView
                android:id="@+id/iv_05_4"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/e_up" />

        </LinearLayout>

        <ImageView
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/ll_05_eye"
            app:srcCompat="@mipmap/indicator" />


    </RelativeLayout>


</RelativeLayout>